<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:textAlignment="center"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculadora"
        android:textSize="34sp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="34sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginBottom="16dp"
    android:paddingBottom="20dp">

    <EditText
        android:id="@+id/etNum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Introduce un número"
        android:inputType="numberDecimal"
        android:textSize="24sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etNum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Introduce otro número"
        android:inputType="numberDecimal"
        android:textSize="24sp" />

</LinearLayout>

    <TextView
        android:id="@+id/tvOperaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elige una operación"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/rbgOperaciones"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <GridLayout
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:paddingTop="20dp"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <RadioButton
                android:id="@+id/rbSumar"
                android:layout_width="141dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:text="Sumar"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rbRestar"
                android:layout_width="141dp"
                android:layout_height="match_parent"
                android:text="Restar"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rbMultiplicar"
                android:layout_width="141dp"
                android:layout_height="match_parent"
                android:text="Multiplicar"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rbDividir"
                android:layout_width="141dp"
                android:layout_height="match_parent"
                android:text="Dividir"
                android:textSize="18sp" />
        </GridLayout>
    </RadioGroup>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:paddingTop="20dp"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnBorrar"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:text="Borrar"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnMostrar"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:text="Mostrar"
            android:textSize="18sp" />

    </GridLayout>
</LinearLayout>